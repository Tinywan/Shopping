<!--pages/home/home.wxml-->
<view>
  <swiper indicator-dots='true' autoplay='true' class='swiper'>
    <block wx:for='{{bannerArr}}'>
      <swiper-item class='banner-item'>
        <image class='item-img' src='{{item.img.url}}'></image>
      </swiper-item>
    </block>
  </swiper>
  <view>
  <view class='home-main'>
    <view class='home-main-theme'>
      <view class='home-main-header'>
        {{item.description}}
      </view>
      <view class='theme-box'>
        <block wx:for="{{themeArr}}">
          <!--index-->
          <view wx:if="{{index==2}}" class='theme-item big'>
            <image src='{{item.topic_img.url}}'></image>
          </view>
          <view wx:else class='theme-item'>
            <image src='{{item.topic_img.url}}'></image>
          </view>
        </block> 
      </view>
    </view>
    <view class='home-main-products'>ppp</view>
  </view>
  </view>
</view>
